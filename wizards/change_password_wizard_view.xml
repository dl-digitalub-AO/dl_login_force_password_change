<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_change_password_wizard" model="ir.ui.view">
        <field name="name">change.password.wizard.form</field>
        <field name="model">dl.change.password.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Password">
                <field name="user_ids" invisible="1"/>
                <group>
                    <field name="password_new" password="True"/>
                    <field name="password_confirm" password="True"/>
                </group>
                <footer>
                    <button name="change_password" string="Change Password" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_change_password_wizard" model="ir.actions.act_window">
        <field name="name">Change Password</field>
        <field name="res_model">dl.change.password.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>